{
  "manifest_version": 3,
  "name": "Show Password Fields",
  "version": "1.0.1",
  "description": "One-click to reveal passwords on any site",
  "permissions": ["scripting", "activeTab", "contextMenus"],
  "action": {
    "default_title": "Reveal Passwords",
    "default_icon": {
      "16": "icons/closed/icon16.png",
      "32": "icons/closed/icon32.png",
      "48": "icons/closed/icon48.png",
      "128": "icons/closed/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/closed/icon16.png",
    "32": "icons/closed/icon32.png",
    "48": "icons/closed/icon48.png",
    "128": "icons/closed/icon128.png"
  },
  "commands": {
    "toggle-passwords": {
      "suggested_key": {
        "default": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      },
      "description": "Toggle password visibility"
    }
  }
}
