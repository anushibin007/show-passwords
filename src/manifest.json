{
	"manifest_version": 3,
	"name": "Show Password Fields",
	"version": "1.0",
	"description": "Changes all password input fields to text.",
	"permissions": ["scripting", "activeTab"],
	"action": {
		"default_title": "Reveal Passwords"
	},
	"background": {
		"service_worker": "background.js"
	},
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
